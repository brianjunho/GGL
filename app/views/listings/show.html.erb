<% if (current_user == @listing.user) && @listing.order.nil? %>
    <div class="row">
        <div class="col-md-5">
            <h1>Preview Order</h1>
            <h4>You can still go back and edit. Order is not final</h4>
            <br>
        </div>
    </div>
    <div class="row"> 
        <div class="col-md-5"> 

        	
            <p><strong>Prompt: </strong><%= @listing.prompt %></p>
            <% if @listing.option == "0" %>
              <p><strong>Pricing Option: </strong>Basic Proofread</p>
            <% else %>
              <p><strong>Pricing Option: </strong>Standard Proofread (w/ Comments and Suggestions)</p>
            <% end %>
            
            <p><strong>Word Count: </strong><%= @listing.word_count %> | 
            <strong>Price: </strong>¥<%= (@listing.price).round(2) %></p>
            <br>
            <div class="form-group">
                <p><%= link_to "Place Order", new_listing_order_path(@listing), class: "btn btn-primary", data: { no_turbolink: true } %></p>
                <p><%= link_to 'Cancel Listing', listing_path(@listing), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-link" %></p>
            </div>
        </div>
        <div class="col-md-7">
    		
            <p><strong>Application: </strong></p>
            <p><%= simple_format(@listing.application) %></p>
            
            <p><strong>Comments to Editor: </strong></p>
            <p><%= simple_format(@listing.comments) %></p>
                       

           
        </div>
        
    </div>
<% elsif (current_user == @listing.user) && !@listing.order.nil? %>
     <div class="row">
        <div class="col-md-5">
            <h1>My Listing</h1>
            <br>
        </div>
    </div>
     <div class="row">
        <div class="col-md-5">
            
            
            <p><strong>Prompt: </strong><%= @listing.prompt %></p>
            <% if @listing.option == "0" %>
              <p><strong>Pricing Option: </strong>Basic Proofread</p>
            <% else %>
              <p><strong>Pricing Option: </strong>Proofread and Comments</p>
            <% end %>
            <p><strong>Word Count: </strong><%= @listing.word_count %> | 
            <strong>Price: </strong>¥<%= (@listing.price).round(2) %></p>
            <br>
            
        </div>
        <div class="col-md-7">
            
            <p><strong>Application: </strong></p>
            <p><%= @listing.application %></p>
            <p><strong>Comments to Editor: </strong></p>
            <p><%= @listing.comments %></p>
        </div>
        
    </div>
<% elsif (current_user != @listing.user) && !@listing.order.nil? && @listing.edit.proofread1.nil? && (current_user.try(:editor?) || current_user.try(:admin?)) %>
    <div class="row">
        <div class="col-md-5">
            <h1>Listing</h1>
            <br>
        </div>
    </div>
    <div class="row">
        <div class="col-md-5">
            
            
            <p><strong>Prompt: </strong><%= @listing.prompt %></p>
            <% if @listing.option == "0" %>
              <p><strong>Pricing Option: </strong>Basic Proofread</p>
            <% else %>
              <p><strong>Pricing Option: </strong>Proofread and Comments</p>
            <% end %>
            <p><strong>Word Count: </strong><%= @listing.word_count %> | 
            <strong>Price: </strong><%= number_to_currency(@listing.price * 0.15 * 0.25) %></p>
            <br>
            <% if @listing.edit.nil? %>
          <p>  <%= link_to "Proofread Now", new_listing_edit_path(@listing), class: "btn btn-primary" %></p>
          <% else %>
            <p>  <%= link_to "Return to Proofread", listing_edit_path(@listing, @listing.edit), class: "btn btn-primary" %></p>
                <% end %>
        </div>
        <div class="col-md-7">
            
              <p><strong>Application: </strong></p>
            <p><%= @listing.application %></p>
            <p><strong>Comments to Editor: </strong></p>
            <p><%= @listing.comments %></p>
              
            
        </div>
        
    </div>
<% elsif !@listing.edit.proofread1.nil? && (@listing.edit.editor == current_user) %>
    <div class="row">
        <div class="col-md-5">
            <h1>Listing Completed</h1>
            
            <br>
        </div>
    </div>
    <div class="row">
        <div class="col-md-5">
            
            
            <p><strong>Prompt: </strong><%= @listing.prompt %></p>
            <% if @listing.option == "0" %>
              <p><strong>Pricing Option: </strong>Basic Proofread</p>
            <% else %>
              <p><strong>Pricing Option: </strong>Proofread and Comments</p>
            <% end %>
            <p><strong>Word Count: </strong><%= @listing.word_count %> | 
            <strong>Price: </strong><%= number_to_currency(@listing.price * 0.15 * 0.25) %></p>
            <br>
            <p>Completed on: <%= @listing.edit.created_at.strftime("%B %-d, %Y") %></p>
        </div>
        <div class="col-md-7">
            <h1></h1>   
            <h2></h2><br>
              <p><strong>Application: </strong></p>
            <p><%= @listing.application %></p>
            <p><strong>Comments to Editor: </strong></p>
            <p><%= @listing.comments %></p>
              
         
        </div>
        
    </div>

<% end %>


     
<% if current_user == @listing.user %>
    <% if @listing.order.nil? %>
        <%= link_to 'Edit', edit_listing_path(@listing), class: "btn btn-link" %> |
        <% end %>
    <%= link_to 'Back', dashboard_path, class: "btn btn-link" %>
<% else %>
    <%= link_to 'Back', listings_path, class: "btn btn-link" %>
<% end %>
