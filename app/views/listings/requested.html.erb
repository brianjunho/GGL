<h1>My Listings</h1>


  <table class="table table-bordered table-striped">
    <thead>
      <tr>
        <th class="center">Requester</th>
        <th class="center">Name</th>
        <th class="center">Prompt</th>
        <th class="center">Action</th>
        
      </tr>
    </thead>

    <tbody>
      <% @listings.each do |listing| %>
        <tr>
          <td class="center"><%= listing.user.name %></td>
          <td class="center"><%= listing.name %></td>
          <td class="center"><%= listing.prompt %></td>
          <!-- <td><%= listing.application %></td> -->
          <td>
              <div class="btn-group">
              <button type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown">
                Action <span class="caret"></span>
              </button>
              <ul class="dropdown-menu" role="menu">
                <li><%= link_to 'View', listing, class: "btn btn-link" %></li>
                <li><%= link_to 'Edit', edit_listing_path(listing), class: "btn btn-link" %></li>
                <li><%= link_to 'Delete', listing, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-link" %></li>
          </td>
          
        </tr>
      <% end %>
    </tbody>
  </table>
  
  <ul class="pager">
    <li class="previous"><a href="#">&larr; Older</a></li>
    <li class="next"><a href="#">Newer &rarr;</a></li>
  </ul>
<br>

<% if user_signed_in? %>
<%= link_to 'New Listing', new_listing_path, class: "btn btn-link", data: { no_turbolink: true } %>
<% end %>
