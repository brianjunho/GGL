<%= form_for(@listing) do |f| %>
  <% if @listing.errors.any? %>
    <div id="error_explanation" class="alert alert-danger alert-dismissable">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <h4><%= pluralize(@listing.errors.count, "error") %> prohibited this listing from being saved:</h4>

      <ul>
      <% @listing.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
 
  <div class="form-group">
    <%= f.label :院校提出的具体要求（若有） %><br><!--prompt -->
    <!--p class="help-block">What is the prompt for your essay?</p-->
    <%= f.text_area :prompt, placeholder: "Enter prompt", class: "form-control" %>
  </div> 
  <div class="form-group">
    <%= f.label :文书文本 %><br>
    <%= f.text_area :application, rows: 10, placeholder: "Paste application here", class: "form-control" %>
  </div>
    
  <div class="form-group">
      <b>选择服务</b><br><!-- select option -->
      
      <%= f.radio_button :option, '0' %>
      <%= f.label :option, '基础服务：语言润色', :value => 'Basic Proofread: Editing for Language' %><br>
      <%= f.radio_button :option, '1' %>
      <%= f.label :option, '优越服务：语言润色及对于架构，内容，逻辑等的专业点评', :value => 'Standard Proofread: Editing for Language, Commenting and Suggestions for Rhetoric (content, structure, logic, purpose, etc.)' %>
     
    
    
  </div>
  <div class="form-group">
    <%= f.label :对编辑的备注 %>（英文）<br>
    <%= f.text_area :comments, rows: 3, placeholder: "Comments need to be in English", class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.submit class: "btn btn-primary" %>
  </div>

 
<% end %>
