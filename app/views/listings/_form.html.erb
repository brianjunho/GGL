<%= form_for(@listing) do |f| %>
  <% if @listing.errors.any? %>
    <div id="error_explanation" class="alert alert-danger alert-dismissable">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <h4><%= pluralize(@listing.errors.count, "error") %> prohibited this listing from being saved:</h4>

      <ul>
      <% @listing.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <b><p>What would you us to proofread?</p></b>
    <%= f.radio_button :name, 'Application' %>
    <%= f.label :name, 'Application', :value => 'Application' %><br>
    <%= f.radio_button :name, 'Resume' %>
    <%= f.label :name, 'Resume', :value => 'Resume' %><br>
    <%= f.radio_button :name, 'Sample Writing' %>
    <%= f.label :name, 'Sample Writing', :value => 'Sample Writing' %><br>
     <%= f.radio_button :name, 'Report' %>
    <%= f.label :name, 'Report', :value => 'Report' %><br>
     <%= f.radio_button :name, 'Translation' %>
    <%= f.label :name, 'Translation', :value => 'Translation' %>
   
   </div>
  <div class="form-group">
    <%= f.label :prompt %><br>
    <p class="help-block">What is the essay topic?</p>
    <%= f.text_area :prompt, placeholder: "Enter prompt", class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :application %><br>
    <%= f.text_area :application, placeholder: "Paste application here", class: "form-control" %>
  </div>
    
  <div class="form-group">
    <p><b>Select Option</b></p>
    <%= f.radio_button :option, '0' %>
    <%= f.label :option, 'Basic Proofread', :value => 'Basic Proofread' %><br>
    <%= f.radio_button :option, '1' %>
    <%= f.label :option, 'Proofread with Comments', :value => 'Proofread with Comments' %>
    
</div>




  <div class="form-group">
    <%= f.submit class: "btn btn-primary" %>
  </div>

 
<% end %>
