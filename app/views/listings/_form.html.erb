<%= form_for(@listing) do |f| %>
  <% if @listing.errors.any? %>
    <div id="error_explanation" class="alert alert-danger alert-dismissable">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <h4><%= pluralize(@listing.errors.count, "error") %> prohibited this listing from being saved:</h4>

      <ul>
      <% @listing.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :prompt %><br>
    <p class="help-block">What is the prompt for your essay?</p>
    <%= f.text_area :prompt, placeholder: "Enter prompt", class: "form-control" %>
  </div> 
  <div class="form-group">
    <%= f.label :application %><br>
    <%= f.text_area :application, rows: 10, placeholder: "Paste application here", class: "form-control" %>
  </div>
    
  <div class="form-group">
      <b>Select Option</b><br>
      
      <%= f.radio_button :option, '0' %>
      <%= f.label :option, 'Basic Proofread: Editing for Language', :value => 'Basic Proofread: Editing for Language' %><br>
      <%= f.radio_button :option, '1' %>
      <%= f.label :option, 'Standard Proofread: Editing for Language, Commenting and Suggestions for Rhetoric (content, structure, logic, purpose, etc.)', :value => 'Standard Proofread: Editing for Language, Commenting and Suggestions for Rhetoric (content, structure, logic, purpose, etc.)' %>
    
    
    
  </div>
  <div class="form-group">
    <%= f.label :comments %><br>
    <%= f.text_area :comments, rows: 3, placeholder: "Provide any additional information to help your editor. Optional", class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.submit class: "btn btn-primary" %>
  </div>

 
<% end %>
