<h1>My Requests</h1>


  <table class="table table-bordered table-striped">
    
      <tr>
        <th class="center">Date Requested</th>
        <th class="center">Name</th>
        <th class="center">Prompt</th>
        <th class="center">Status</th>
        
        <th class="center">Completed by:</th>
           
        <th class="center">Action</th>
      </tr>
    

    
      <% @listings.each do |listing| %>
        <tr>
          <td class="center"><%= listing.updated_at.strftime("%B %-d, %Y") %></td>
          <td class="center"><%= listing.name %></td>
          <td class="center"><%= listing.prompt %></td>
          <% if !listing.edit.nil? %>
            <td><%= link_to 'Completed', listing_edit_path(listing.edit, listing.edit), class: "btn btn-success" %></td>
            <td class="center"><%= listing.edit.editor.name %></td>
            <td>
              <div class="btn-group">
              <button type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown">
                Action <span class="caret"></span>
              </button>
              <ul class="dropdown-menu" role="menu">
                <li><%= link_to 'View', listing, class: "btn btn-link" %></li>
                <li><%= link_to 'Delete', listing, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-link" %></li>
            </td>
          <% else %>
            <td>Pending</td>
            <td></td>
            <td>
              <div class="btn-group">
              <button type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown">
                Action <span class="caret"></span>
              </button>
              <ul class="dropdown-menu" role="menu">
                <li><%= link_to 'View', listing, class: "btn btn-link" %></li>
                <li><%= link_to 'Edit', edit_listing_path(listing), class: "btn btn-link" %></li>
                <li><%= link_to 'Delete', listing, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-link" %></li>
            </td>
          <% end %>        
          
        </tr>
      <% end %>
    
  </table>
