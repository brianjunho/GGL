  <% if user_signed_in? && current_user.try(:editor?) %>
    <h1>Browse Listings</h1>


      <table class="table table-bordered table-striped">
        <tr>
            <th class="center">Requester</th>
            <th class="center">Name</th>
            <th class="center">Prompt</th>
            <th class="center">Option</th>
            <th class="center">Price</th>
            <th class="center">Status</th>
        </tr>
           
        <% @listings.each do |listing| %>
          <tr>
            <td>
              <a href="/users/<%= listing.user.id %>"><%= listing.user.name %></a></td>
            <td><a href="/listings/<%= listing.id %>"><%= listing.name %></td>
            <td><%= listing.prompt %></td>
            <td>
              <% if listing.option == "0" %>
                  <p>Basic Proofread</p>
              <% else %>
                <p>Proofread and Comments</p>
              <% end %>
            </td>
            <td><%= number_to_currency(listing.price) %></td>
            <td>
              <% if !listing.edit.nil? %>
                <p>Completed on <%= listing.edit.created_at.strftime("%B %-d, %Y") %> by <a href="/users/<%= listing.edit.editor_id %>"><%= listing.edit.editor.name %></a></td>      </p>
              <% elsif listing.order.nil? %>
                <% if current_user.try(:admin?) %>
                    <p><%= link_to 'Pending Payment', listing, class: "btn btn-primary" %></p>
                <% else %>
                  <p>Pending Payment from User</p>
                  <% end %>
              <% else %>                  
                <p><%= link_to 'Available', listing, class: "btn btn-primary" %></p>
              <% end %>
            </td>
          </tr>
        <% end %>    
      </table>
      


    <% else %>
  <script type="text/javascript">
        window.location.href="/dashboard"  
  </script>
<% end %>