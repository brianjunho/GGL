<h1>All Listings</h1>


  <table class="table table-bordered table-striped table-hover">
    <tr>
        <th class="center">Requester</th>
        <th class="center">Name</th>
        <th class="center">Prompt</th>
        <th class="center">Option</th>
        <td class="center">Price</th>
        <th class="center"></th>
       
      </tr>
      
    <% @listings.each do |listing| %>
      <tr>
        <td>
          <%= listing.user.name %></td>
        <td><%= listing.name %></td>
        <td><%= listing.prompt %></td>
        <td>
          <% if listing.option == "0" %>
              <p>Basic Proofread</p>
          <% else %>
            <p>Proofread and Comments</p>
          <% end %>
        </td>
        <td><%= number_to_currency(listing.price) %></td>
        <% if @edit == nil %>
            <td><%= link_to 'Open Job', listing, class: "btn btn-primary" %></td>
        <% else %>
            <td>Closed</td>
        <% end %>
      </tr>
  <% end %>    
  </table>
  
  <ul class="pager">
    <li class="previous"><a href="#">&larr; Older</a></li>
    <li class="next"><a href="#">Newer &rarr;</a></li>
  </ul>

<br>

<% if user_signed_in? %>
  <%= link_to 'New Listing', new_listing_path, class: "btn btn-link", data: { no_turbolink: true } %>
<% end %>
