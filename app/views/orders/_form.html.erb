<%= form_for([@listing, @order]) do |f| %>
  <% if @order.errors.any? %>
    <div id="error_explanation" class="alert alert-danger alert-dismissable">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <h4><%= pluralize(@order.errors.count, "error") %> prohibited this order from being saved:</h4>

      <ul>
      <% @order.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>

    </div>
  <% end %>
<div class="row">
    <div class="col-md-5">
        <h4><strong>Essay Type: </strong><%= @listing.name %></h4>
    <p><strong>Pricing Option: </strong>
        <% if @listing.option == "0" %>
              Basic Proofread
          <% else %>
            Proofread and Comments
          <% end %></p>
       <p><strong>Price: </strong><%= number_to_currency(@listing.price) %></p><br>
            </div>
    <div class="col-md-5">
    
       
  <p><strong>Put stripe here for payment</strong></p>
   <div class="form-group">
    <%= f.submit class: "btn btn-primary" %>
  </div>
    </div>
</div>
 

<% end %>
