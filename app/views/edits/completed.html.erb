<div class="row">
  <div class="thumbnail col-md-2">
    <p><%= link_to image_tag(current_user.avatar.url(:medium)), edit_user_registration_path %></p>
  </div>
  <div class="col-md-4">
      <h3><strong><%= current_user.name %></strong></h3>
      <p>Last online: <%= current_user.last_sign_in_at.strftime("%B %-d, %Y") %></p>
  </div>
  <div class="col-md-3">
      <h3></h3>
      <p><strong>Number of Listings: </strong></p>
      <p><strong>Number of Jobs Completed: </strong></p>
  </div>
</div>


<p>Attach stats (rankings, reviews)</p>

<h3>Your Job History</h3>
<table class="table table-bordered table-striped">
    <thead>
      <tr>
        <th class="center">Document Type</th>
        <th class="center">Requester</th>
        <th class="center">Date Edited</th>
        <th class="center">Money made</th>
        <th class="center"></th>
        
      </tr>
    </thead>

    <tbody>
      <% @edits.each do |edit| %>
        <tr>
          <td class="center"><%= edit.listing.name %></td>
          <td class="center"><%= edit.requester.name %></td>
          <td class="center"><%= edit.created_at.strftime("%B %-d, %Y") %></td>
           <td class="center"><%= edit.listing.price %></td>
           <td class="center form-group"><%= link_to 'View Proofread', listing_edit_path(edit, edit), class: "btn btn-success" %></td>           
        </tr>
      <% end %>
    </tbody>
  </table>

<p> Add comments section down here for others to give them feedback?</p>
  
 
<br>

<% if user_signed_in? %>
<%= link_to 'New Listing', new_listing_path, class: "btn btn-link", data: { no_turbolink: true } %>
<% end %>
  