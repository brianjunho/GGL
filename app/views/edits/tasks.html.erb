<div class="center">
  <h1>Your Completed Tasks</h1>
</div>


  <table class="table table-bordered table-striped">
    <thead>
      <tr>
        <th class="center">Document Type</th>
        <th class="center">Prompt</th>
        <th class="center">Editor</th>
        <th class="center">Date Completed</th>
        <th class="center">Actions</th>
        <th></th>
        
      </tr>
    </thead>

    <tbody>
      <% @edits.each do |edit| %>
        <tr>
          <td class="center"><%= edit.listing.name %></td>
          <td class="center"><%= edit.listing.prompt %></td>
          <td class="center"><%= edit.editor.name %></td>
          <td class="center"><%= edit.created_at.strftime("%B %-d, %Y") %></td>
          <td class="center">Link to show order page</td>
          <!-- <td><%= listing.application %></td> -->
          <td>
              <div class="btn-group">
              <button type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown">
                Action <span class="caret"></span>
              </button>
              <ul class="dropdown-menu" role="menu">
                <li><%= link_to 'View', listing, class: "btn btn-link" %></li>
                <li><%= link_to 'Edit', edit_listing_path(listing), class: "btn btn-link" %></li>
                <li><%= link_to 'Delete', listing, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-link" %></li>
          </td>
          
        </tr>
      <% end %>
    </tbody>
  </table>
  
 
<br>

<% if user_signed_in? %>
<%= link_to 'New Listing', new_listing_path, class: "btn btn-link" %>
<% end %>
  