<% if (current_user == @edit.editor) && @edit.proofread1.nil? %>
  <div class="row">
        <div class="col-md-5">
            <h1>Preview Proofread</h1>
            <h4>You can still go back and edit. Proofread is not yet final</h4>
            <br>
        </div>
    </div>
  <div class="row">
      <div class="col-md-6">
        <p><strong>Prompt: </strong><%= @edit.listing.prompt %></p>
      </div>
      <div class="col-md-6">
